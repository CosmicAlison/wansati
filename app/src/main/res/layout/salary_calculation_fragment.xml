<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/logoSalaryCalc"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:src="@drawable/ic_splash_logo"
            android:layout_marginTop="-11dp"
            android:layout_marginLeft="128dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/logo_description" />

        <!-- Input for Job Title -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="16dp"
            android:text="Our algorithm can provide an accurate estimate of potential earnings in your field. Just enter your details to get started!"
            android:textColor="@color/theme_purple"
            android:textSize="16sp"
            />

        <EditText
            android:id="@+id/jobTitleInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter job title"
            android:inputType="text"
            android:padding="8dp"
            android:background="@drawable/rounded_edittext_background" />

        <!-- Input for Years of Experience -->
        <EditText
            android:id="@+id/experienceInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter years of experience"
            android:inputType="numberDecimal"
            android:padding="8dp"
            android:background="@drawable/rounded_edittext_background"
            android:layout_marginTop="16dp" />

        <TextView 
            android:id="@+id/educationText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select your highest attained degree:"
            android:textSize="14sp"
            android:textColor="@color/theme_purple"
            android:padding="8dp"
            android:layout_marginTop="16dp" 
        />

        <!-- Dropdown for Education Level -->
        <Spinner
            android:id="@+id/educationSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_edittext_background"
            android:padding="8dp" />

        <!-- Input for education title -->
        <EditText
            android:id="@+id/educationTitleInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter the title or field of your degree"
            android:inputType="text"
            android:padding="8dp"
            android:background="@drawable/rounded_edittext_background"
            android:layout_marginTop="16dp" />

        <!-- Predict Button -->
        <Button
            android:id="@+id/predictButton"
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:text="Get Estimates"
            android:background="@drawable/rounded_button_no_fill"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/theme_purple"
            android:padding="12dp" />

        <!-- Display Predicted Salary -->
        <TextView
            android:id="@+id/predictedSalaryText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Predicted Salary Range: "
            android:textSize="18sp"
            android:layout_gravity="center_horizontal"
            android:paddingTop="24dp"
            android:visibility="gone" />

    </LinearLayout>
</ScrollView>
